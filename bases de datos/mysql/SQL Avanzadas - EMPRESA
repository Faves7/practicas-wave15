CREATE DATABASE EMPRESA

use EMPRESA;

CREATE TABLE DEPARTAMENTO (
    dpto_nro VARCHAR(10) NOT NULL,
    nombre_depto VARCHAR(45) NOT NULL,
    localidad VARCHAR(45),
    PRIMARY KEY (dpto_nro)
);

CREATE TABLE EMPLEADO (
    cod_emp VARCHAR(10) NOT NULL,
    nombre VARCHAR(45) NOT NULL,
    apellido VARCHAR(45),
    puesto VARCHAR(45),
    fecha_alta DATE,
    salario INT,
    comision INT,
     dpto_nro VARCHAR(10) NOT NULL,
    PRIMARY KEY (cod_emp),
    FOREIGN KEY (dpto_nro) REFERENCES DEPARTAMENTO(dpto_nro)
);


