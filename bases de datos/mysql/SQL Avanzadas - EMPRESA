#Seleccionar el nombre, el puesto y la localidad de los departamentos donde trabajan los vendedores.
SELECT  nombre, puesto, localidad  FROM EMPRESA.EMPLEADO em
 JOIN EMPRESA.DEPARTAMENTO dep ON em.dpto_nro = dep.dpto_nro;

#Visualizar los departamentos con más de cinco empleados.
SELECT  dep.nombre_depto, count(em.dpto_nro) FROM EMPRESA.EMPLEADO em JOIN EMPRESA.DEPARTAMENTO dep 
ON em.dpto_nro = dep.dpto_nro GROUP BY dep.nombre_depto  HAVING count(em.dpto_nro);

#Mostrar el nombre, salario y nombre del departamento de los empleados que tengan el mismo puesto que ‘Mito Barchuk’.
SELECT  nombre, salario,  dep.nombre_depto FROM EMPRESA.EMPLEADO em JOIN EMPRESA.DEPARTAMENTO dep ON em.dpto_nro = dep.dpto_nro 
WHERE em.puesto = (SELECT puesto FROM EMPLEADO em WHERE em.nombre = "Mito" AND em.apellido = "Barchuk");

#Mostrar los datos de los empleados que trabajan en el departamento de contabilidad, ordenados por nombre.
SELECT  * FROM EMPRESA.EMPLEADO em JOIN EMPRESA.DEPARTAMENTO dep ON em.dpto_nro = dep.dpto_nro 
WHERE dep.nombre_depto = "Contabilidad" ORDER BY em.nombre;

#Mostrar el nombre del empleado que tiene el salario más bajo.
SELECT em.nombre FROM EMPRESA.EMPLEADO em WHERE salario order by salario asc LIMIT 1;

#Mostrar los datos del empleado que tiene el salario más alto en el departamento de ‘Ventas’.
SELECT  em.nombre FROM EMPRESA.EMPLEADO em JOIN EMPRESA.DEPARTAMENTO dep ON em.dpto_nro = dep.dpto_nro 
WHERE dep.nombre_depto = "Ventas" ORDER BY em.nombre desc LIMIT 1;
